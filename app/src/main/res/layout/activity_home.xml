<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:background="@color/fv_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="72dp"
                android:layout_height="72dp"/>
        </LinearLayout>

        <TextView
            android:text="FVBIB"
            android:textColor="@color/fv_text_light"
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="LINEUP - VOLLEY"
            android:textColor="@color/fv_accent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="HOJA DE POSICIONES"
            android:textColor="@color/fv_text_muted"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEntrenadores"
            style="?attr/materialButtonStyle"
            android:text="ENTRENADORES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fv_accent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArbitros"
            style="?attr/materialButtonStyle"
            android:text="ÁRBITROS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/fv_accent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInstrucciones"
            style="?attr/materialButtonOutlinedStyle"
            android:text="INSTRUCCIONES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <TextView
            android:text="ESP"
            android:textColor="@color/fv_text_muted"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Copyright ©2024 - FVBIB"
            android:textColor="@color/fv_text_muted"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
